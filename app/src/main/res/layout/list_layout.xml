<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/layout_homeListLayout"
            >

            <ImageView
                android:id="@+id/img_PRExerciseThumbnail"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:padding="4dp"
                />

            <TextView
                android:id="@+id/txt_routineTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/img_PRExerciseThumbnail"
                android:text="Exercise Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/fontInner"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_timeFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_routineTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_PRExerciseThumbnail"
                android:text="Timeframe"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/fontOuter"
                />

            <Button
                android:id="@+id/btn_tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_timeFrame"
                android:layout_toRightOf="@id/img_PRExerciseThumbnail"
                android:text="View Tutorial"
                android:backgroundTint="@color/lightBlue"
                android:textColor="@color/fontInner"
                android:visibility="gone"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>