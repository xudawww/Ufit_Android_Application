<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!--<ImageView
                android:id="@+id/img_PRExerciseThumbnail"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:padding="4dp" />-->

            <TextView
                android:id="@+id/txt_PRExerciseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/img_PRExerciseThumbnail"
                android:text="Exercise Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="18sp"
                android:textColor="@color/fontInner"/>

            <TextView
                android:id="@+id/txt_lastPerformed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_PRExerciseTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_PRExerciseThumbnail"
                android:text="Last Performed Date"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/fontOuter" />

            <TextView
                android:id="@+id/txt_personalRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_lastPerformed"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_PRExerciseThumbnail"
                android:text="Personal Best"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/fontOuter" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>